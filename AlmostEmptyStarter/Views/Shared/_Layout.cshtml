<!DOCTYPE html>
<html lang="en">
	<head>
		<title>@ViewData["Title"]</title>

		<!--<link rel="stylesheet" href="~/css/site.css" />-->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<script src="~/js/site.js"></script>
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
          <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">QuantumPulse</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" asp-controller="Home" asp-action="HelloWorld">HelloWorld</a>
                </li>
				<li class="nav-item">
                  <a class="nav-link" asp-controller="Home" asp-action="Employees">Employees</a>
                </li>
				<li class="nav-item">
                  <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                </li>
              </ul>
            </div>
          </div>
        </nav>
		<h1>My first ASP.NET Website</h1>
		@*ASP.NET will replace the RenderBody call
			with content from the view that uses 
			this layout
		*@
		@RenderBody()

		<footer>
			&copy;@DateTime.Today.Year
		</footer>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
	</body>
</html>